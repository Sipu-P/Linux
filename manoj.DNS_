vim /etc/named.rfc1912.zones 
#
zone "master.org" IN {
        type master;
        file "named.forward";
        allow-update { 172.25.2.10; };
};

zone "2.25.172.in-addr.arpa" IN {
        type master;
        file "named.reverse";
        allow-update { 172.25.2.10; };
};
###############################
vim named.forward

$TTL 1D
@       IN SOA  coss.master.org. root.coss.master.org. (
                                        0       ; serial
                                        1D      ; refresh
                                        1H      ; retry
                                        1W      ; expire
                                        3H )    ; minimum
        NS      coss.master.org.
coss    A     172.25.2.11
coss1   A     172.25.2.12
coss2   A     172.25.2.13
:wq
