$TTL 1D
@       IN SOA coss.master.org. root.coss.master.org. (
                                        0       ; serial
                                        1D      ; refresh
                                        1H      ; retry
                                        1W      ; expire
                                        3H )    ; minimum
        NS      coss.master.org.
11      IN PTR  coss.master.org.
12      IN PTR  coss1.master.org.
13      IN PTR  coss2.master.org.
